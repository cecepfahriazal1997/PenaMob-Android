<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/form_card"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/library" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/image"
        android:fontFamily="@raw/barlow_bold"
        android:text="Library"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/image"
        android:fontFamily="@raw/barlow_light"
        android:layout_marginTop="4dp"
        android:text="Tersedia beberapa referensi buku yang kamu butuhkan disini."
        android:textColor="@color/grayLevel6"
        android:textSize="14sp" />
</RelativeLayout>