<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentTopic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/form_card"
    android:padding="16dp">

    <TextView
        android:id="@+id/topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/arrow"
        android:fontFamily="@raw/barlow_bold"
        android:text="Topik 1"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/total_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topic"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/arrow"
        android:fontFamily="@raw/barlow_medium"
        android:text="10 pembelajaran"
        android:textColor="@color/grayLevel5"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/arrow_down" />

    <LinearLayout
        android:id="@+id/content_lesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_lesson"
        android:layout_marginTop="16dp"
        android:background="@drawable/form_control"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone" />
</RelativeLayout>