<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="2dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/number"
                    android:layout_marginTop="2dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/badge_primary"
                    android:fontFamily="@raw/barlow_medium"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/question"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@raw/barlow_medium"
                        android:gravity="center_vertical"
                        android:text="Tingkatkan konsistensi dari tujuan proyek pada Konstitusi"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/percentage"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:paddingHorizontal="16dp"
                        android:background="@drawable/badge_light"
                        android:fontFamily="@raw/barlow_medium"
                        android:gravity="center"
                        android:text="2%"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/badge_light"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/option_1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginVertical="2dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/badge_white"
                    android:fontFamily="@raw/barlow_medium"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/option_2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginVertical="2dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/badge_white"
                    android:fontFamily="@raw/barlow_medium"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/option_3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginVertical="2dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/badge_white"
                    android:fontFamily="@raw/barlow_medium"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/option_4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginVertical="2dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/badge_white"
                    android:fontFamily="@raw/barlow_medium"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/option_5"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginVertical="2dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/badge_white"
                    android:fontFamily="@raw/barlow_medium"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>