<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/form_card"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/grayLevel3"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius_top_left="16dp"
        app:riv_corner_radius_top_right="16dp"
        app:riv_mutate_background="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@raw/barlow_medium"
            android:maxLines="1"
            android:text="Matematika"
            android:textColor="@color/grayLevel5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@raw/barlow_bold"
            android:maxLines="1"
            android:text="Matematika"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/participant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:fontFamily="@raw/barlow_medium"
            android:maxLines="1"
            android:text="10 Peserta"
            android:textColor="@color/grayLevel5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@raw/barlow_medium"
            android:maxLines="1"
            android:text="Dr. Burhan Sunaryo"
            android:textColor="@color/grayLevel5"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>