<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="48dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/description"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@raw/barlow_bold"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Peringatan Buka"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@raw/barlow_medium"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:justificationMode="inter_word"
            android:text="Harus dimengerti aplikasi ini berisi materi profesional, Hanya digunakan oleh petugas terlatih yang telah dilatih."
            android:textColor="@color/grayLevel5"
            android:textSize="16dp" />
    </LinearLayout>

</RelativeLayout>